#!/usr/bin/env php
<?php

$words = [
    'skausmas',
    'kančia',
    'pragaras',
    'dykuma', 'sausuma',
    'tuščias gyvenimas',
    'egzistencija',
    'skerdykla',
    'mėsmalė',
    'pabaiga',
    'bekelė',
    'nepavykę santykiai',
    'pabaiga be pradžios',
    'depresija',
    'demonai',
    'velniai',
    'trauma',
    'klaidos',
    'vienišumas',
    'pagalbos šauksmas',
    'skilimas',
    'puvimas',
    'šlapdriba',
    'pasėkmės',
];

function sentence(array $words) {
    $sentence = [];

    shuffle($words);

    $sentence = array_slice($words, 0, rand(3, 10));

    return ucfirst(implode(' ', $sentence));
}

$paragraph = range(1, rand(7,10));

$paragraph = array_map(fn () => sentence($words), $paragraph);

echo implode('. ', $paragraph) . '.';
