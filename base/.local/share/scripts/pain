#!/usr/bin/env php
<?php

$words = [
    'skausmas',
    'kančia',
    'pragaras',
    'dykuma', 'sausuma',
    'tuščias gyvenimas',
    'egzistencija',
    'skerdykla',
    'mėsmalė',
    'pabaiga',
    'bekelė',
    'nepavykę santykiai',
    'pabaiga be pradžios',
    'depresija',
    'demonai',
    'velniai',
    'trauma',
    'klaidos',
    'vienišumas',
    'pagalbos šauksmas',
    'širdies skausmas',
    'skilimas',
    'puvimas',
    'šlapdriba',
    'pasėkmės',
    'tamsa',
];

$joins = [
    'nes',
    'dėl to kad',
    'ir',
    'po to',
];

shuffle($words);

$paragraph = [];

while (count($words) > 0) {
    $sentence = array_splice($words, 0, rand(2,4));

    $paragraph[] = ucfirst(implode(' ', $sentence));
}

echo implode('. ', $paragraph) . '.';
